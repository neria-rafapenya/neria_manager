          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"productId\": \"hipoteca-hogar\",\n  \"amount\": 120000,\n  \"termMonths\": 240,\n  \"downPayment\": 20000\n}"
        },
